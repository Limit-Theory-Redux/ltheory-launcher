{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "LTR Launcher",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "execute": true,
        "open": true,
        "scope": [
          {
            "name": "sh",
            "cmd": "sh",
            "args": ["-c", { "validator": "\\S+" }]
          },
          {
            "name": "cmd",
            "cmd": "cmd",
            "args": ["/C", { "validator": "\\S+" }]
          }
        ]
      },
      "app": {
        "all": true,
        "show": true,
        "hide": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "setFocus": true,
        "print": false,
        "center": true
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": false,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": false
      },
      "fs": {
        "all": false,
        "readFile": false,
        "writeFile": false,
        "readDir": false,
        "copyFile": false,
        "createDir": false,
        "removeDir": false,
        "removeFile": false,
        "renameFile": false,
        "exists": true,
        "scope": [
          "$DATA/LTheoryRedux/LTheoryRedux/**"]
      },
      "os": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/LTR_Icon.ico"
      ],
      "identifier": "com.ltr.ltr-launcher",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "LTR Launcher",
        "width": 1280,
        "height": 720,
        "minWidth": 1280,
        "minHeight": 720,
        "alwaysOnTop": false,
        "decorations": false,
        "visible": true
      }
    ]
  }
}
